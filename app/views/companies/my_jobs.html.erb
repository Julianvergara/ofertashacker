<%javascript 'endless'%>
<script> $("li#mis_ofertas a span").addClass("current")</script>
<%=hidden_field_tag :endless_path, "my_jobs", :company=> "#{current_company.id}"%>
<% if current_company && @jobs.empty? %>
  <div class="mainContent span-23">
    <h1>Aun no tienes ofertas publicadas</h1>
    <%=link_to "Publica tu primera oferta", new_job_path, :class => "button"%>
  </div>
<%else%>
  <%= render :partial => "jobs/jobs", :locals => {:jobs => @jobs} %>
<%end%>
