<% custom_title "Registro"%>
<h2><%= t('.company_info') %></h2>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  
  <p><%= f.label :title, t('.title') + " *" %><br />
  <%= f.text_field :title, :required=>"required", :pattern=>"[a-zA-Z ]{5,}" %></p>

  <p><%= f.label :city, t('.city') + " *" %><br />
  <%= f.text_field :city, :class => 'city_autocomplete', :required=>"required"%></p></p>
  
  <p><%= f.label :email,  t('.email') + " *" %><br />
  <%= f.text_field :email, :required=>"required", :type=>"email" %></p>

  <p><%= f.label :password,  t('.password') + " *" %><br />
  <%= f.password_field :password, :required=>"required" %></p>

  <p><%= f.label :password_confirmation,  t('.password_confirmation') + " *" %><br />
  <%= f.password_field :password_confirmation, :required=>"required"%></p>
  
  <p><%= f.label :logo %><br />
  <%= f.file_field :logo %></p>
  
  <p><%= f.label :description,  t('.description') + " *" %><br />
  <%= f.text_area :description, :required=>"required" %></p>
  
  <p><%= f.submit "Crear" %></p>
<% end %>


