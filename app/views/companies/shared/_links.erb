<div class='session_links'>
	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name) %><br />
	<% end -%>
	<br />
	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  <%= link_to "Reenviar instrucciones de confirmación", new_confirmation_path(resource_name) %><br />
	<% end -%>	
</div>
