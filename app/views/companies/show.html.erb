<div class="content" >
  <% custom_title @company.title%>
  <div class = "nav-buttons">
    <ul id="prueba">
    <% if current_company && current_company.admin? %>
      <li><%= link_to t('.company_index'), companies_path(), :class => "button"  %></li>
    <% end %>
    <% if can? :manage, @company %>
      <li><%= link_to t(:edit), edit_company_path(@company), :class => "button" %></li>
      <li><%= link_to "Eliminar empresa", company_path(@company), :class => "button", :confirm => "¿Estás seguro de eliminar #{@company.title}?", :method => :delete %></li>
    <% end %>
    </ul>
  </div>

  <div id="logoperfil">
    
  </div>
  <div class="generalForm">
    <div id="left">
      <p><%= image_tag @company.logo.url(:medium) %></p>
      <div class="clear"></div>
      <div id="info">
        <% unless @company.city.blank?%>
          <h2><%= t('.city') %></h2>
          <ul>
            <li><%= @company.city %></li>
          </ul>
        <% end %>
        <%= render :partial => 'contact_info', :locals => {:company => @company}%>
      </div>
      <%= image_tag "shadow.gif" %>
    </div>
    <div id="right">
      <h1><%= @company.title %></h1>
      <p><%= @company.description ? RedCloth.new(@company.description).to_html.html_safe : "" %></p>
      <div class="clear"></div>
      <% unless @company.jobs.blank? %>

            <br />
            <h3>Estamos Buscando:</h3>
            <% @company.latests_jobs.each do |job| %>
              <div class="ofertacontenedor"><!--ofertacontenedor-->
		            <div class="oferta">
			            <%= link_to job.title, job_path(job) %>
			            <h2>En <%=job.city%>
                    <%= job.full_time ? ", de Tiempo Completo ".html_safe : nil%>
                    <%= job.part_time ? ", de Medio Tiempo ".html_safe : nil%>
                    <%= job.remote ? ", Remoto ".html_safe : nil%>
                    <%= job.flexible ? ", Horario Flexible".html_safe : nil%>
                  </h2>
			            <ul>
			              <% job.latest_required_skills.each do |rs| %>
			                <li>- <%= rs.skill_name %></li>
			              <% end %>
			            </ul>  
		            </div>
		          <%= image_tag "sombra.png" %>
		          </div><!--/ofertacontenedor-->
            <% end %> 
      <% end %>
      </div>
    <div class="clear"></div>
  </div>
</div>

