<% custom_title @company.title%>

<div id="logoperfil"><!--logoperfil-->
     <% if @company.logo? %>
      <p><%= image_tag @company.logo.url(:medium) %></p>
    <% else %>
      <p><%= t('.no_picture') %></p>
    <% end %>
</div><!--/logoperfil-->
<div class="generalForm">
  <div id="left"><!--left-->
   <div id="info">
      <h2><%= t('.city') %></h2>
      <ul>
        <li><%= @company.city %></li>
      </ul>
			<h2>Contacto</h2>
			<ul>
			  <li><%= link_to "#{@company.website}", prepend_http(@company.website), :target => :blank %></li>
				<li><%= @company.phone1 %></li>
				<li><%= mail_to @company.contact_email %></li>
				<li><%= link_to "@#{@company.twitter}", prepend_twitter(@company.twitter), :target => :blank %></li>
				<li><%= link_to "facebook.com/#{@company.facebook}", prepend_facebook(@company.facebook), :target => :blank %></li>
			</ul>
		</div>
		<%= image_tag "shadow.gif" %>
  </div><!--/left-->
  <div id="right"><!--right-->
    <h2><%= @company.title %></h2>
    <p><%= @company.description ? RedCloth.new(@company.description).to_html.html_safe : "" %></p>
    <div class="clear"></div>
    <% if can? :manage, @company %>
      <%= link_to t(:edit), edit_company_path(@company), :class => "button" %>
      <%= link_to "Eliminar empresa", company_path(@company), :class => "button", :confirm => "¿Estás seguro de eliminar #{@company.title}?", :method => :delete %>
    <% end %>
    <% if current_company && current_company.admin? %>
        <%= link_to t('.company_index'), companies_path(), :class => "button"  %>
    <% end %>
  </div><!--/right-->
  <div class="clear"></div>
</div>


