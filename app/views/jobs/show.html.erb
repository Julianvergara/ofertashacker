<div class="generalForm">
  <div class="nav-buttons">
  <% if can? :manage, @job%>    
      <%=link_to "Editar", edit_job_path(@job), :class => "button"%> 
      <%= link_to 'Borrar', @job, :confirm => 'Â¿Estas Seguro que deseas borrar la oferta?', :method => :delete, :class => "button" %>
    <% end%>
    </div>
  <div id="left"><!--left-->
    <div id="logo">
      <%= link_to (image_tag @job.company.logo.url(:medium)), company_path(@job.company), :style => 'float:right;' %>
  	</div>
		<div class="clear"></div>
		<div id="info"> 
      <%=render :partial =>'companies/contact_info', :locals => {:company => @job.company}%>
		</div>
		<%= image_tag "shadow.gif" %>
  </div><!--/left-->
  <div id="right"><!--right-->
    <div style="width:100%;overflow:hidden;"><h1><%= @job.title%></h1></div>
    <h4>En <%=@job.city%>
      <%= @job.full_time ? ", Tiempo Completo".html_safe : nil%>
      <%= @job.part_time ? ", Medio Tiempo".html_safe : nil%>
      <%= @job.remote ? ", Remoto".html_safe : nil%>
      <%= @job.flexible ? ", Horario Flexible".html_safe : nil%>
    </h4>
    <% for skill in @job.required_skills %>
      <div class="tag">
        <span><%= skill.skill_name %></span>
      </div>
    <% end %>
    
    <% for skill in @job.format_extra_skills%>
      <div class="tag">
        <span><%= truncate(skill, :length => 110) %></span>
      </div>
    <% end %>

    <div class="clear"></div>
    <p>
    <p><%= RedCloth.new(@job.description).to_html.html_safe %></p>
   </div><!--/right-->
  <div class="clear"></div>
</div>

