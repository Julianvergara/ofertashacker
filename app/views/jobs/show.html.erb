<div class="generalForm">
  <div id="left"><!--left-->
    <div id="logo">
			<%= image_tag @job.company.logo.url(:thumb) %>
  	</div>
		<div class="clear"></div>
		<div id="info"> 
			<h2>Contacto</h2>
			<ul>
				<li><%= @job.company.phone1 %></li>
				<li><%= mail_to @job.company.contact_email %></li>
				<li><%= link_to @job.company.facebook %></li>
			</ul>
		</div>
		<%= image_tag "shadow.gif" %>
  </div><!--/left-->
  <div id="right"><!--right-->
    <h1><%= @job.title%></h1>
    <h4>En <%=@job.city%>
      <%= @job.full_time ? ", Tiempo Completo".html_safe : nil%>
      <%= @job.part_time ? ", Medio Tiempo".html_safe : nil%>
      <%= @job.remote ? ", Remoto".html_safe : nil%>
      <%= @job.flexible ? ", Horario Flexible".html_safe : nil%>
    </h4>
    <% for skill in @job.required_skills %>
      <div class="tag">
        <span><%= skill.skill_name %></span>
        <%= image_tag "tag.gif", :class => "tagimg" %>
      </div>
    <% end %>
    <div class="clear"></div>
    <h2>Descripción</h2>
    <p><%= RedCloth.new(@job.description).to_html.html_safe %></p>
    <% if can? :manage, @job%>    
      <%=link_to "Editar", edit_job_path(@job), :class => "button"%> 
      <%= link_to 'Borrar', @job, :confirm => '¿Estas Seguro que deseas borrar la oferta?', :method => :delete, :class => "button" %>
    <% end%>
  </div><!--/right-->
</div>

