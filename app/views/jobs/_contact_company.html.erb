<h3>¿Qué le quieres decir a la empresa?</h3>

<%= form_tag contact_company_job_path(job), :multipart => true  do %> 
  <%= label_tag t('.name') %>
  <%= text_field_tag :name, nil, :class => "required", :value => cookies[:name] %>        
  <%= label_tag t('.email') %>	 
  <%= text_field_tag :email, nil, :class => "required email", :value => cookies[:email] %>
  <%= label_tag t('.message') %>
  <li class="textarea"><%= text_area_tag :message, nil, :class => "required" %></li>
  <div id="cv">
  <span class="act_as_label">
    CV 
    <%= file_field_tag :file, :style=>"padding-left:10px;"%>
  </span>
  <%=image_tag "ajax-loader-contact.gif", :id=>"loader_contact", :style=>"position:absolute;bottom:26px;right:180px;"%>
  </div>
  <%= submit_tag "Enviar mensaje", :class=>"button right prepend-top", :id=>"contact_submit"%>
<% end %>
