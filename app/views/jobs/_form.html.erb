
<%= form_for @job do |f| %> 
  <% if @job.errors.any? %>
    <div id="error_explanation">
      
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
    
    
      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2><%= t('.job_detail') %></h2>
   
  <p><%= f.label :title, t('.title') + " *" %><br />
  <%= f.text_field :title, :required => "required" %></p>
  
  <p><%= f.label :city, t('.city') + " *" %><br />
   <%=f.text_field :city, :class => 'city_autocomplete', :required => "required"%></p>
  
  <h5><%= t('.job_type') %></h5>
  <p><%= f.check_box :full_time %> <%= f.label :full_time %> </p>
  
  <p><%= f.check_box :part_time %> <%= f.label :part_time %></p>
  
  <p><%= f.check_box :remote %> <%= f.label :remote %></p>
  
  <p><%= f.check_box :flexible %> <%= f.label :flexible %> </p>
  
 
  <h2><%= t('.required_profile') %></h2>  
  <%for category in SkillCategory.all%>
            <h3><%= category.category %></h3>
    <div id="all_skills"class="c<%=category.id%>">
      <ul id="job_skills" >
        <h5><%= t('.skills') %></h5>
        <% (RequiredSkill.find_all_by_skill_category_id(category.id) - @job.required_skills).each do |required_skill| %>
          <li id="<%= required_skill.id %>" class="skill" data-skill-id='<%= required_skill.id %>' >
            <%= required_skill.skill_name%>
          </li>
        <% end %>  
      </ul>
     
      
      <ul id="job_required_profile">
          <h5><%= t('.required_profile') %></h5>
          <% @job.required_skills.find_all_by_skill_category_id(category).each do |required_skill| %>
            <li class="required_skill" data-skill-id='<%= required_skill.id %>' >
              <%= required_skill.skill_name%>
            </li>
          <% end %> 
      </ul>
      <%=image_tag 'arrow.jpg', :id=>"arrow"%>
      <%=image_tag 'arrow_back.jpg', :id=>"arrow_back"%>
    </div>  
  <% end %>
  <%= f.hidden_field :required_skill_ids_string %>
  
  <p><%= f.label :extra_skill, t('.extra_skill') %><br />
   <%=f.text_field :extra_skill, :cols=>3%></p>
   
  <p><%= f.label :description, t('.job_description') + " *" %><br /> 
  <%= f.text_area :description, :required => "required" %></p>
  
  <p><%= f.submit t(:create) %>  <%= button_to t(:cancel), jobs_path() %></p>
<% end %>

