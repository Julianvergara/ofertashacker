<div class="mainContent clear span-24">
  <hr noshade="noshade" width="100%" class="topSpacing"/>
  <div class="infoCompany span-4 last">
    <p>Datos de la oferta</p>
  </div>
  <div class="generalForm span-20 last">
    <%= form_for @job do |f| %> 
      <% if @job.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
          <ul>
          <% @job.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>   
	    <div class="firstColumn span-9 prepend-1">
		<h1><%=t('.title') + " *" %></h1>
        <%= f.text_field :title, :required => "required" %></p>
        
			  	<h1><%=t('.city') + " *" %></h1>	 
         <%=f.text_field :city, :class => 'city_autocomplete', :required => "required"%></p>
      </div>
      
	    <div class="secondColumn span-9 prepend-1 last">
		    <h1><%= t('.job_type') %>:</h1>
		    <ul>
		      <li><%= f.check_box :full_time %> <%= f.label :full_time %> </li>
		      <li><%= f.check_box :remote %> <%= f.label :remote %></li>
		      <li><%= f.check_box :part_time %> <%= f.label :part_time %></li>
		      <li><%= f.check_box :flexible %> <%= f.label :flexible %></li>
		    </ul>
	    </div>
   </div>
	  <div class="divShadow span-24">
      <div class="infoCompany span-4 last">
	      <p><%= t('.required_profile') %></p>
      </div>
      <div class="part2 span-20 last">
	  <%for category in SkillCategory.all%>		
	 	 <div id="all_skills" class="c<%=category.id%>">
			<h1 class='prepend-1'><%=category.category%></h1>
		    <div class="habilitiesArea span-6 prepend-1">
		     	  <div id="" class="habilitiesList span-6">
					    <ul id="job_skills" >
	                   <% (RequiredSkill.find_all_by_skill_category_id(category.id) - @job.required_skills).each do |required_skill| %>
	                     <li id="<%= required_skill.id %>" class="skill" data-skill-id='<%= required_skill.id %>' >
	                       <%= required_skill.skill_name%>
	                     </li>
	                   <% end %>  
	                 </ul>
				  </div>
		    </div>	
		    <div class="profileArea span-8 prepend-1 last">
				    <div class="profileList span-6">
					    <ul id="job_required_profile">
	                     <% @job.required_skills.find_all_by_skill_category_id(category).each do |required_skill| %>
	                       <li class="required_skill" data-skill-id='<%= required_skill.id %>' >
	                         <%= required_skill.skill_name%>
	                       </li>
	                     <% end %> 
	                 </ul>
				    </div>
		        </div>    
		    </div>
			<div class='clear'></div>
      <% end %>
        			<div id="extra_skill">
        			  	<h1><%=t('.extra_skill') %></h1>	 
                <%=f.text_field :extra_skill, :cols=>3%></p>
              </div>
					  </div>
    <%= f.hidden_field :required_skill_ids_string %>
    <div class="divShadow span-24">
	    <div class="infoCompany span-4 last">
		  <p>Descripci√≥n de la Oferta</p>
	    </div>
		  <div class="descriptionForm span-20 last">
			  <div class="span-16 prepend-1">
				  <h1>Oferta*</h1>
          <%= f.text_area :description, :required => "required" %>
			  </div>		
		  </div>     
	  </div>
	  <div class="divShadow span-24 buttons">
			<div class="infoCompany span-4 last"></div>
			<div class="span-20 last">
				  <div class="calltoAction">
		          	 <p><%= f.submit "Crear" %></p>
				  </div>
			</div>
		</div>
	  </div>
  <% end %>
  </div>
</div>
