<li class="job shadow" id = "<%= job.id%>">
  <%= hidden_field_tag "publish_date", job.publish_date%>
  <%= link_to(job) do %>
    <div class="span-4" >
      <%if job.has_logo %>
        <%=image_tag job.logo_url, :style=> "display:block;"%>
      <%else%>
        <h4><%= truncate(job.company.title, :length => 25)%></h4>
      <%end%>
    </div>
    <div class="prepend-3 span-5 last">
      <span class="small-tag">
        <%= "Hace #{time_ago_in_words(job.publish_date)}"%>
      </span>
    </div>
  <h1><%= truncate(job.title, :length => 40) %></h1>
  <p><%= truncate(condensed_information(job),:length => 70) %> </p>
  <% end %>
</li>
