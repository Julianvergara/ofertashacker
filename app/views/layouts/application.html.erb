  <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

  <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
  	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= @content_for_title%>Ruby Pros</title>
	  <!--[if lt IE 8]><link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
	
    <%= stylesheet_link_tag "jquery-ui" %>
    <%= stylesheet_link_tag 'blueprint/screen', :media=>"screen, projection" %>
    <%= stylesheet_link_tag 'blueprint/print', :media=>"print" %>
    <%= stylesheet_link_tag 'style', :media=>"screen" %>
    <%= stylesheet_link_tag 'extra' %>
	  <link href='http://fonts.googleapis.com/css?family=Arvo' rel='stylesheet' type='text/css'>
	  <link href='http://fonts.googleapis.com/css?family=Arvo:bold' rel='stylesheet' type='text/css'>

    <%= javascript_include_tag :defaults,'jquery.infinitescroller' %>
    <%= javascript_include_tag 'rails' %>
    <%= javascript_include_tag 'validator' %>
    <%= javascript_include_tag 'metropoli.jquery.ui' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
 
  <body>
  	<div class="container">
		<!-- header starts -->
		<div id="header" class="clear span-24 last">
		  <ul class="topMenu span-21 prepend-3 last">
          <% if current_company %>
            <li><%= link_to "<span>Salir</span>".html_safe, destroy_company_session_path() %></li>
            <li><%= link_to "<span>Perfil</span>".html_safe, company_path(current_company) %></li>
            <li><%= link_to "<span>Publicar oferta</span>".html_safe,  new_job_path() %></li>
            <li><%= link_to "<span>Ofertas</span>".html_safe, jobs_path() %></li>
            <%if can? :manage, SkillCategory%>
              <li><%= link_to "<span>Skills</span>".html_safe, skill_categories_path %></li>
            <%end%>
            <% if  current_company.admin? %>
              <li><%= link_to "<span>Compañias</span>".html_safe, companies_path %></li>
            <% end %>
          <% else %>
            <li><%= link_to "<span>Entrar</span>".html_safe, new_company_session_path() %></li>
            <li><%= link_to "<span>¿Empresa?, Regístrate</span>".html_safe, new_company_registration_path()%></li>
            <li><%= link_to "<span>Ver ofertas</span>".html_safe, jobs_path() %></li>
          <% end %>
		  </ul>
		  
		  <div class="logo clear span-6">
			  <%= link_to (image_tag "logo.png", :alt=>"Rubypros", :width=>"245", :height=>"150"), root_path %>
		  </div>
			<% unless needs_filter? request.path %>
			  <%= render 'layouts/filter' %>
			<% end%>
				<a class="twitter" href="http://www.twitter.com/innku" target="_blank">
				<span>
				</span>
			</a>
		</div>
		
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <%= content_tag :h1, yield(:title) if show_title? %>

      <% if check_path_for request.path%>
        		<div class="mainContent clear span-23">
              		<%= yield %>
            	</div>
      <%else%>
              <%= yield %>
      <%end%>
      
		<div id="footer" class="clear span-24 last">
		      <ul>
		        <li><%= link_to "ofertas", jobs_path %></li>
				    <li><%= link_to "publicar ofertas", new_job_path %></li>
				    <li><%= link_to "contáctanos", contact_path %></li>
				    <li><%= link_to "acerca de", about_path %></li>
		      </ul>
		</div>
	</div>
  </body>
</html>
