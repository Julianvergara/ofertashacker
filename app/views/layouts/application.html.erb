  <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

  <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
  	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= @content_for_title%>Ruby Pros</title>
	  <!--[if lt IE 8]><link rel="stylesheet" href="css/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]-->
	
    <%= stylesheet_link_tag "jquery-ui" %>
    <%= stylesheet_link_tag 'blueprint/screen', :media=>"screen, projection" %>
    <%= stylesheet_link_tag 'blueprint/print', :media=>"print" %>
    <%= stylesheet_link_tag 'style', :media=>"screen" %>
	  <link href='http://fonts.googleapis.com/css?family=Arvo' rel='stylesheet' type='text/css'>
	  <link href='http://fonts.googleapis.com/css?family=Arvo:bold' rel='stylesheet' type='text/css'>

    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'rails' %>
    <%= javascript_include_tag 'validator' %>
    <%= javascript_include_tag 'metropoli.jquery.ui' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
 
  <body>
  	<div class="container">
		<!-- header starts -->
		<div id="header" class="clear span-24 last">
		  <ul class="topMenu span-12 prepend-12 last">
          <% if current_company %>
            <li><%= link_to current_company.title, company_path(current_company) %></li>
            <li><%= link_to t('.new_job'),  new_job_path() %></li>
            <li><%= link_to t('.my_vacancies'), jobs_path() %></li>
            <li><%= link_to t('.all_vacancies'), available_path() %></li>
            <li><%= link_to t('.sign_out'), destroy_company_session_path() %></li>
            <%if can? :manage, RequiredSkill%>
              <li><%= link_to t('.required_skills'),required_skills_path %></li>
            <%end%>
            <%if can? :manage, SkillCategory%>
              <li><%= link_to t('.skill_category'), skill_categories_path %></li>
            <%end%>
          <% else %>
            <li><%= link_to "<span>Entrar</span>".html_safe, new_company_session_path() %></li>
            <li><%= link_to "<span>¿Empresa?, Regístrate</span>".html_safe, new_company_registration_path()%></li>
          <% end %>
		  </ul>
		  
		  <div class="logo clear span-5">
			  <a href=""><%=image_tag "jobBoard_logo.png", :alt=>"Ruby Job Board", :width=>"194", :height=>"150" %></a>
			</div>

		  <div><img class="" alt="" src="images/shareIcon.png" width="" height=""></div>
		</div>
		
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>

      <%=request.path%>
      <% if check_path_for request.path%>
            <div class="mainContent span-23">
              <%= yield %>
            </div>
      <%else%>
              <%= yield %>
      <%end%>
      
		<div id="footer" class="clear span-24 last">
      <ul>
        <li><a href="">ofertas</a></li>
		    <li><a href="">publicar ofertas</a></li>
		    <li><a href="">contáctanos</a></li>
      </ul>
		</div>
	</div>
	<script type="text/javascript"> Cufon.now(); </script>
  </body>
</html>
